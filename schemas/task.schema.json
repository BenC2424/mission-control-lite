{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MissionControlTask",
  "type": "object",
  "required": ["id", "title", "status", "priority", "owner", "createdAt", "updatedAt"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string", "minLength": 3 },
    "description": { "type": "string" },
    "status": { "enum": ["inbox", "assigned", "in_progress", "review", "blocked", "done"] },
    "priority": { "enum": ["p0", "p1", "p2", "p3"] },
    "riskTier": { "enum": ["low", "high"], "default": "low" },
    "owner": { "enum": ["ultron", "codi", "scout"] },
    "watchers": { "type": "array", "items": { "enum": ["ultron", "codi", "scout"] }, "uniqueItems": true },
    "requiresApproval": { "type": "boolean", "default": false },
    "approvalState": { "enum": ["none", "pending", "approved", "rejected"], "default": "none" },
    "evidence": {
      "type": "object",
      "properties": {
        "tests": { "type": "array", "items": { "type": "string" } },
        "artifacts": { "type": "array", "items": { "type": "string" } },
        "sources": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
