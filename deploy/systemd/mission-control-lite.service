[Unit]
Description=Mission Control Lite
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/.openclaw/workspace/mission-control-lite
Environment=NODE_ENV=production
Environment=PORT=8787
# Environment=READ_ONLY=1
ExecStart=/usr/bin/node /home/ubuntu/.openclaw/workspace/mission-control-lite/server.mjs
Restart=always
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
